@page
@model ContactManager.Pages.CreateModel
@{
    ViewData["Title"] = "New Contact";

    <h1>Novo Contato</h1>

    <form method="post" class="mt-3">
        <div class="form-group">
            <label asp-for="_Customers.Name" class="form-label">Name</label>
            <input asp-for="_Customers.Name" class="form-control"></input>
            <span asp-validation-for="_Customers.Name" class="text-danger"></span>
        </div>

         <div class="form-group mt-2">
             <label asp-for="_Customers.Contact" class="form-label">Contact</label>
             <input asp-for="_Customers.Contact" class="form-control"></input>
             <span asp-validation-for="_Customers.Contact" class="text-danger"></span>
         </div>

         <div class="form-group mt-2">
             <label asp-for="_Customers.EmailAddress" class="form-label">E-mail</label>
             <input asp-for="_Customers.EmailAddress" class="form-control"></input>
             <span asp-validation-for="_Customers.EmailAddress" class="text-danger"></span>
         </div> 

        <button type="submit" class="btn btn-success mt-3">Save</button>
        <a asp-page="Index" class="btn btn-secondary mt-3">Cancel</a>
    </form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
